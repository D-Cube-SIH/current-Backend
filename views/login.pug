doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login Page
    link(rel="shortcut icon" href="./../../assets/images/favicon.ico" type="image/x-icon")
    link(rel="stylesheet" href="./login.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet")

  body
    .container
      h1 WELCOME

      .login-box
        h2 LOGIN
        if message
          h5(style="color: red;") #{message}
        form(action="/success" method="post")
          label(for="username" style="font-weight: 400;") Username:
          input#username(type="text" name="username" required)

          label(for="password" style="font-weight: 400;") Password:
          input#password(type="password" name="password" required)

          .fp-container
            a.forget-password(href="#") Forgot password?

          button(type="submit" style="margin-top: 20px;") Login

          p.Sign-in(style="padding-top: 10px;")
            | Don't you have account ? 
            a(href="/user") SignUp
